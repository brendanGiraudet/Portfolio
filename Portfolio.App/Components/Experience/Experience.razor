<div class="experience">

    <div class="commit">
        <div class="commit-icon">
            <svg class="Octicon-sc-9kayk9-0" viewBox="0 0 16 16">
                <path
                    d="M11.93 8.5a4.002 4.002 0 0 1-7.86 0H.75a.75.75 0 0 1 0-1.5h3.32a4.002 4.002 0 0 1 7.86 0h3.32a.75.75 0 0 1 0 1.5Zm-1.43-.75a2.5 2.5 0 1 0-5 0 2.5 2.5 0 0 0 5 0Z">
                </path>
            </svg>
        </div>
        <div class="commit-title">
            <span class="commit-title-job">@ExperienceModel.Title
            </span>
            <span>@ExperienceModel.Date</span>
        </div>
    </div>

    <div class="experience-info">
        @foreach (var experienceDetail in @ExperienceModel.ExperienceDetails)
        {
            <div class="experience-info-details">
                <span>@experienceDetail.Title</span>

                <ul>
                    @foreach (var detail in experienceDetail.Details)
                    {
                        <li>@detail</li>
                    }
                </ul>
            </div>
        }
    </div>

</div>